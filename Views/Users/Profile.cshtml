@model User

<style>
    .profile-container {
        padding: 40px 0;
    }

    .profile-sidebar {
        position: sticky;
        top: 20px;
    }

    .profile-card {
        background: white;
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.1);
        text-align: center;
    }

    .profile-image-wrapper {
        position: relative;
        display: inline-block;
        margin-bottom: 20px;
    }

    .profile-image {
        width: 180px;
        height: 180px;
        border-radius: 50%;
        object-fit: cover;
        border: 5px solid white;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
        transition: transform 0.3s ease;
    }

        .profile-image:hover {
            transform: scale(1.05);
        }

    .profile-badge {
        position: absolute;
        bottom: 10px;
        right: 10px;
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #667eea, #764ba2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.2rem;
        border: 3px solid white;
        box-shadow: 0 3px 10px rgba(0,0,0,0.2);
    }

    .profile-name {
        font-size: 1.8rem;
        font-weight: 800;
        color: #2d3748;
        margin-bottom: 10px;
    }

    .profile-username {
        color: #667eea;
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .profile-stats {
        display: flex;
        justify-content: space-around;
        margin-top: 25px;
        padding-top: 25px;
        border-top: 2px solid #f8f9fa;
    }

    .stat-item {
        text-align: center;
    }

    .stat-number {
        display: block;
        font-size: 1.5rem;
        font-weight: 700;
        background: linear-gradient(135deg, #667eea, #764ba2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .stat-label {
        display: block;
        font-size: 0.85rem;
        color: #718096;
        margin-top: 5px;
    }

    .profile-content {
        background: white;
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.1);
    }

    .content-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 25px;
        padding-bottom: 20px;
        border-bottom: 3px solid #f8f9fa;
        position: relative;
    }

        .content-header:after {
            content: '';
            position: absolute;
            bottom: -3px;
            left: 0;
            width: 80px;
            height: 3px;
            background: linear-gradient(90deg, #667eea, #764ba2);
            border-radius: 2px;
        }

    .section-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #2d3748;
        display: flex;
        align-items: center;
        gap: 10px;
        margin: 0;
    }

    .section-icon {
        width: 40px;
        height: 40px;
        background: linear-gradient(135deg, #667eea, #764ba2);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.1rem;
    }

    .section-count {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
        padding: 5px 15px;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.9rem;
    }

    .section-divider {
        height: 40px;
        border: none;
        margin: 30px 0;
    }

    /* Posts Section */
    .posts-section {
        margin-bottom: 40px;
    }

    .posts-list {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .post-item {
        background: #f8f9fa;
        border-radius: 12px;
        padding: 20px;
        border-left: 4px solid transparent;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 15px;
    }

        .post-item:hover {
            background: white;
            border-left-color: #667eea;
            box-shadow: 0 5px 20px rgba(102, 126, 234, 0.15);
            transform: translateX(5px);
        }

    .post-icon {
        width: 45px;
        height: 45px;
        background: linear-gradient(135deg, #667eea, #764ba2);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.2rem;
        flex-shrink: 0;
        transition: transform 0.3s ease;
    }

    .post-item:hover .post-icon {
        transform: scale(1.1);
    }

    .post-content {
        flex: 1;
    }

    .post-link {
        font-size: 1.1rem;
        font-weight: 700;
        color: #2d3748;
        text-decoration: none;
        transition: color 0.3s ease;
        display: block;
    }

        .post-link:hover {
            color: #667eea;
        }

    /* Comments Section */
    .comments-section {
        margin-top: 40px;
    }

    .comments-list {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .comment-item {
        background: #f8f9fa;
        border-radius: 12px;
        padding: 20px;
        border-left: 4px solid transparent;
        transition: all 0.3s ease;
    }

        .comment-item:hover {
            background: white;
            border-left-color: #764ba2;
            box-shadow: 0 5px 20px rgba(118, 75, 162, 0.15);
            transform: translateX(5px);
        }

    .comment-header {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 10px;
    }

    .comment-icon {
        width: 35px;
        height: 35px;
        background: linear-gradient(135deg, #764ba2, #667eea);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1rem;
        flex-shrink: 0;
    }

    .comment-text {
        color: #2d3748;
        line-height: 1.6;
        margin-bottom: 10px;
    }

    .comment-post {
        display: inline-flex;
        align-items: center;
        gap: 5px;
        padding: 5px 12px;
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
        border-radius: 15px;
        font-size: 0.85rem;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .comment-post:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
            color: white;
        }

    .empty-state {
        text-align: center;
        padding: 40px 20px;
        color: #a0aec0;
    }

    .empty-icon {
        font-size: 3rem;
        margin-bottom: 15px;
        opacity: 0.5;
    }

    .empty-text {
        font-size: 1.1rem;
    }

    @@media (max-width: 768px) {
        .profile-card

    {
        padding: 25px;
        margin-bottom: 20px;
    }

    .profile-image {
        width: 150px;
        height: 150px;
    }

    .profile-content {
        padding: 25px;
    }

    .section-title {
        font-size: 1.3rem;
    }

    .post-item,
    .comment-item {
        padding: 15px;
    }

    }
</style>

<div class="profile-container">
    <div class="row">
        <div class="col-lg-3">
            <div class="profile-sidebar">
                <div class="profile-card">
                    <div class="profile-image-wrapper">
                        <img src="/img/@Model.Image" class="profile-image" alt="@Model.Name" />
                        <div class="profile-badge">
                            <i class="bi bi-person-check-fill"></i>
                        </div>
                    </div>
                    <h2 class="profile-name">@Model.Name</h2>
                    <div class="profile-username">@@@Model.UserName</div>

                    <div class="profile-stats">
                        <div class="stat-item">
                            <span class="stat-number">@Model.Posts.Count</span>
                            <span class="stat-label">Gönderi</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-number">@Model.Comments.Count</span>
                            <span class="stat-label">Yorum</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-9">
            <div class="profile-content">
                <!-- Posts Section -->
                <div class="posts-section">
                    <div class="content-header">
                        <h3 class="section-title">
                            <div class="section-icon">
                                <i class="bi bi-file-earmark-text"></i>
                            </div>
                            Yayınlanan Gönderiler
                        </h3>
                        <span class="section-count">@Model.Posts.Count</span>
                    </div>

                    @if (Model.Posts != null && Model.Posts.Any())
                    {
                        <div class="posts-list">
                            @foreach (var item in Model.Posts)
                            {
                                <div class="post-item">
                                    <div class="post-icon">
                                        <i class="bi bi-file-richtext"></i>
                                    </div>
                                    <div class="post-content">
                                        <a href="/posts/details/@item.Url" class="post-link">@item.Title</a>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <div class="empty-icon">
                                <i class="bi bi-inbox"></i>
                            </div>
                            <div class="empty-text">Henüz gönderi yok</div>
                        </div>
                    }
                </div>

                <div class="section-divider"></div>

                <!-- Comments Section -->
                <div class="comments-section">
                    <div class="content-header">
                        <h3 class="section-title">
                            <div class="section-icon">
                                <i class="bi bi-chat-dots"></i>
                            </div>
                            Yapılan Yorumlar
                        </h3>
                        <span class="section-count">@Model.Comments.Count</span>
                    </div>

                    @if (Model.Comments != null && Model.Comments.Any())
                    {
                        <div class="comments-list">
                            @foreach (var item in Model.Comments)
                            {
                                <div class="comment-item">
                                    <div class="comment-header">
                                        <div class="comment-icon">
                                            <i class="bi bi-chat-left-quote"></i>
                                        </div>
                                    </div>
                                    <div class="comment-text">@item.Text</div>
                                    <a href="/posts/details/@item.Post.Url" class="comment-post">
                                        <i class="bi bi-arrow-right-circle-fill"></i>
                                        @item.Post.Title
                                    </a>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <div class="empty-icon">
                                <i class="bi bi-chat-square-text"></i>
                            </div>
                            <div class="empty-text">Henüz yorum yok</div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>