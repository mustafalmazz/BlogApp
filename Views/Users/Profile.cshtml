@model User

<div class="row">
    <div class="col-md-2">
        <div class="bg-white p-4" >
            <img src="/img/@Model.Image" style="width:150px;height:120px; "  />
          </div>
    </div>
    <div class="col-md-10">
        <div class="bg-white p-2">
            <h5>@Model.Name</h5>
            <hr />
            <div id="posts">
                <h5 class="my-4">Yayınlanan Gönderiler</h5>
                <ul class="list-group">
                    @foreach (var item in Model.Posts)
                    {
                        <li class="list-group-item"><i class="bi bi-caret-right-fill"></i> <a href="/posts/details/@item.Url"><b>@item.Title</b></a></li>
                    }
                </ul>
            </div>
            <div id = "comments">
                <h5 class="my-4">Yapılan Yorumlar</h5>
                <ul class="list-group">
                    @foreach (var item in Model.Comments)
                    {
                        <li class="list-group-item"><i class="bi bi-chat-right-text-fill"></i> @item.Text<i>    <u>[@item.Post.Title]</u></i> </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>