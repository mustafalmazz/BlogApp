@model Post

<style>
    .post-detail-container {
        padding: 30px 0;
    }
    
    .post-content-wrapper {
        background: white;
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.1);
        margin-bottom: 30px;
    }
    
    .post-title {
        font-size: 2.5rem;
        font-weight: 800;
        color: #2d3748;
        margin-bottom: 25px;
        line-height: 1.3;
    }
    
    .post-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-bottom: 25px;
    }
    
    .post-tag {
        display: inline-flex;
        align-items: center;
        padding: 8px 16px;
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white !important;
        text-decoration: none;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }
    
    .post-tag:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
    }
    
    .post-image {
        width: 100%;
        border-radius: 15px;
        margin-bottom: 25px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
    }
    
    .post-meta {
        display: flex;
        flex-wrap: wrap;
        gap: 25px;
        padding: 20px 0;
        margin-bottom: 25px;
        border-bottom: 2px solid #f8f9fa;
    }
    
    .meta-item {
        display: flex;
        align-items: center;
        gap: 8px;
        color: #718096;
        font-size: 0.95rem;
    }
    
    .meta-item i {
        color: #667eea;
        font-size: 1.1rem;
    }
    
    .meta-item a {
        color: #2d3748;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s ease;
    }
    
    .meta-item a:hover {
        color: #667eea;
    }
    
    .post-body {
        font-size: 1.1rem;
        line-height: 1.8;
        color: #2d3748;
    }
    
    .post-body p {
        margin-bottom: 1.5rem;
    }
    
    /* Comments Section */
    .comments-section {
        background: white;
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.1);
        margin-top: 30px;
    }
    
    .comments-header {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 3px solid #f8f9fa;
        position: relative;
    }
    
    .comments-header:after {
        content: '';
        position: absolute;
        bottom: -3px;
        left: 0;
        width: 80px;
        height: 3px;
        background: linear-gradient(90deg, #667eea, #764ba2);
        border-radius: 2px;
    }
    
    .comments-title {
        font-size: 1.8rem;
        font-weight: 700;
        color: #2d3748;
        margin: 0;
    }
    
    .comment-count {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
        padding: 5px 15px;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.9rem;
    }
    
    .comment-item {
        display: flex;
        gap: 15px;
        padding: 25px;
        background: #f8f9fa;
        border-radius: 15px;
        margin-bottom: 20px;
        transition: all 0.3s ease;
        border-left: 4px solid transparent;
    }
    
    .comment-item:hover {
        background: white;
        box-shadow: 0 5px 20px rgba(102, 126, 234, 0.1);
        border-left-color: #667eea;
        transform: translateX(5px);
    }
    
    .comment-avatar {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        border: 3px solid white;
        box-shadow: 0 3px 10px rgba(0,0,0,0.1);
        flex-shrink: 0;
    }
    
    .comment-content {
        flex: 1;
    }
    
    .comment-header {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 10px;
        flex-wrap: wrap;
    }
    
    .comment-author {
        font-weight: 700;
        color: #2d3748;
        text-decoration: none;
        font-size: 1.1rem;
        transition: color 0.3s ease;
    }
    
    .comment-author:hover {
        color: #667eea;
    }
    
    .comment-username {
        color: #667eea;
        font-size: 0.9rem;
    }
    
    .comment-date {
        color: #a0aec0;
        font-size: 0.85rem;
    }
    
    .comment-text {
        color: #4a5568;
        line-height: 1.6;
        margin: 0;
    }
    
    .comment-divider {
        border: none;
        height: 2px;
        background: linear-gradient(90deg, transparent, #e2e8f0, transparent);
        margin: 20px 0;
    }
    
    /* Comment Form */
    .comment-form-section {
        margin-top: 40px;
        padding-top: 40px;
        border-top: 2px solid #f8f9fa;
    }
    
    .form-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 25px;
        display: flex;
        align-items: center;
        gap: 10px;
    }
    
    .form-title i {
        color: #667eea;
    }
    
    .form-label {
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 10px;
    }
    
    .form-control {
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        padding: 12px 18px;
        font-size: 1rem;
        transition: all 0.3s ease;
    }
    
    .form-control:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        outline: none;
    }
    
    .btn-submit {
        background: linear-gradient(135deg, #667eea, #764ba2);
        color: white;
        border: none;
        padding: 12px 30px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }
    
    .btn-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
    }
    
    .login-prompt {
        text-align: center;
        padding: 30px;
        background: #f8f9fa;
        border-radius: 15px;
        color: #718096;
        font-size: 1.1rem;
    }
    
    .login-prompt a {
        color: #667eea;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s ease;
    }
    
    .login-prompt a:hover {
        color: #764ba2;
    }
    
    @@media (max-width: 768px) {
        .post-content-wrapper {
            padding: 25px;
        }
        
        .post-title {
            font-size: 1.8rem;
        }
        
        .comments-section {
            padding: 25px;
        }
        
        .comment-item {
            padding: 15px;
        }
        
        .comment-avatar {
            width: 50px;
            height: 50px;
        }
    }
</style>

<div class="post-detail-container">
    <div class="row">
        <div class="col-lg-8">
            <div class="post-content-wrapper">
                <h1 class="post-title text-center">@Model.Title</h1>
                
                <div class="post-tags">
                    @foreach (var item in Model.Tags)
                    {
                        <a href="/posts/tag/@item.Url" class="post-tag">
                            <i class="bi bi-tag-fill"></i> @item.Text
                        </a>
                    }
                </div>
                
                <img src="~/img/@Model.Image" class="post-image" alt="@Model.Title" />
                
                <div class="post-meta">
                    <div class="meta-item">
                        <i class="bi bi-person-circle"></i>
                        <a href="/profile/@Model.User.UserName">@Model.User.Name</a>
                    </div>
                    <div class="meta-item">
                        <i class="bi bi-calendar-event"></i>
                        <span>@Model.PublishedOn.ToString("d")</span>
                    </div>
                </div>
                
                <div class="post-body">
                    @Html.Raw(@Model.Content)
                </div>
            </div>
            
            <div class="comments-section">
                <div class="comments-header">
                    <h4 class="comments-title">Yorumlar</h4>
                    <span class="comment-count">
                        <span id="commentCount">@Model.Comments.Count()</span> 
                    </span>
                </div>
                
                <div id="comments">
                    @foreach (var item in Model.Comments)
                    {
                        <div class="comment-item">
                            <img src="/img/@item.User.Image" class="comment-avatar" alt="@item.User.Name" />
                            <div class="comment-content">
                                <div class="comment-header">
                                    <a href="/profile/@item.User.UserName" class="comment-author">@item.User.Name</a>
                                    <span class="comment-username">@@@item.User.UserName</span>
                                    <span class="comment-date">@item.PublishedOn.ToString("G")</span>
                                </div>
                                <p class="comment-text">@item.Text</p>
                            </div>
                        </div>
                        
                        @if (item != Model.Comments.Last())
                        {
                            <hr class="comment-divider" />
                        }
                    }
                </div>
                
                @if (User.Identity!.IsAuthenticated)
                {
                    <div class="comment-form-section">
                        <h4 class="form-title">
                            <i class="bi bi-chat-left-text"></i>
                            Yorum Ekle
                        </h4>
                        <form asp-controller="Posts" asp-action="AddComment" method="post">
                            <input type="hidden" id="PostId" name="PostId" value="@Model.PostId" />
                            <input type="hidden" id="Url" name="Url" value="@Model.Url" />

                            <div class="mb-3">
                                <label for="Text" class="form-label">Yorumunuz</label>
                                <textarea rows="4" type="text" name="Text" id="Text" class="form-control" placeholder="Düşüncelerinizi paylaşın..."></textarea>
                            </div>
                            <div class="mb-3">
                                <button id="btnYorumKayit" type="submit" class="btn-submit">
                                    <i class="bi bi-send-fill"></i>
                                    Yorum Gönder
                                </button>
                            </div>
                        </form>
                    </div>
                }
                else
                {
                    <div class="login-prompt">
                        <i class="bi bi-lock" style="font-size: 2rem; color: #667eea; margin-bottom: 10px;"></i>
                        <p>Yorum yapabilmek için <a href="/users/login">giriş yapmalısınız</a></p>
                    </div>
                }
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="sidebar">
                @await Component.InvokeAsync("TagsMenu")
                @await Component.InvokeAsync("NewPosts")
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function(){
            $("#btnYorumKayit").click(function(e){
                e.preventDefault();

                $.ajax({
                    type:'POST',
                    url:'@Url.Action("AddComment")',
                    dataType:'json',
                    data:{
                        PostId : $('#PostId').val(),
                        UserName : $('#UserName').val(),
                        Text : $('#Text').val(),
                        Url: $('#Url').val()
                    },
                    success: function(yorum){
                        console.log(yorum);
                        $("#comments").append(`
                            <div class="my-4 d-flex">
                                <img src="/img/${yorum.image}" class="avatar rounded-circle float-start me-3" />
                                <div>
                                    <div class="mb-2 d-flex">
                                        <h6 class="me-2">${yorum.userName}</h6>
                                        <small>${new Date(yorum.publishedOn).toLocaleString()}</small>
                                    </div>
                                    <p>${yorum.text}</p>
                                </div>
                            </div>
                            <hr class="my-4" />
                        `);

                       
                        $("#UserName").val('');
                        $("#Text").val('');

                        
                        var text = $("#commentCount").text(); 
                        var number = parseInt(text);
                        if (!isNaN(number)) {
                            $("#commentCount").text((number + 1) + " adet yorum");
                        }
                    }
                });
            });
        });
    </script>

}
