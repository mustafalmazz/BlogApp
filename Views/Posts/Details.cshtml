@model Post

<div class="row">
    <div class="col-lg-8">
        <div class="bg-white p-4">
            <h1 class="h4 mb-4">@Model.Title</h1>
            <div class="tags">
                @foreach (var item in Model.Tags)
                {
                    <a href="/posts/tag/@item.Url" class="badge bg-@item.Color bg-opacity-10 text-@item.Color mb-3 fw-bold ">@item.Text</a>
                }
            </div>
            <div class="tags">
                <a href="#" class="badge bg-primary bg-opacity-10 text-danger mb-3 fw-bold"></a>
                <a href="#" class="badge bg-primary bg-opacity-10 text-danger mb-3 fw-bold"></a>
            </div>
            <img src="~/img/@Model.Image" class="img-fluid rounded" alt="resim yüklenemedi" />
            <div>@Model.Content</div>
        </div>
        <div class="bg-white mt-3">
            <div class="card border-0">
                <div class="card-header pb-0">
                    <h4><span id="commentCount">@Model.Comments.Count() adet yorum</span> </h4>
                </div>
                <div class="card-body">
                    <div id="comments">
                        @foreach (var item in Model.Comments)
                        {
                            <div class=" my-4 d-flex">
                                <img src="/img/@item.User.Image" class="avatar rounded-circle float-start me-3" />
                                <div>
                                    <div class="mb-2 d-flex">
                                        <h6 class="me-2">@item.User.UserName</h6>
                                        <small>@item.PublishedOn.ToString("G")</small>
                                    </div>
                                    <p>@item.Text</p>
                                </div>
                            </div>
                            <hr class="my-4" />
                        }

                    </div>
                    @if (User.Identity!.IsAuthenticated)
                    {
                        <div>
                            <h4 class="mb-3">
                                Yorum Ekle
                            </h4>
                            <form asp-controller="Posts" asp-action="AddComment" method="post">
                                <input type="hidden" id="PostId" name="PostId" value="@Model.PostId" />
                                <input type="hidden" id="Url" name="Url" value="@Model.Url" />

                                <div class="mb-3">
                                    <label for="Text" class="form-label">Yorum</label>
                                    <textarea rows="3" type="text" name="Text" id="Text" class="form-control"></textarea>
                                </div>
                                <div class="mb-3">
                                    <button id="btnYorumKayit" type="submit" class="btn btn-primary">Yorum Ekle</button>
                                </div>
                            </form>
                        </div>
                    }
                    else{
                        <p>Yorum Yapabilmek İçin Giriş Yapmalısınız!  <a href="/users/login">Login</a></p>
                    }
                    
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        @await Component.InvokeAsync("TagsMenu")
        @await Component.InvokeAsync("NewPosts")
    </div>
</div>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function(){
            $("#btnYorumKayit").click(function(e){
                e.preventDefault();

                $.ajax({
                    type:'POST',
                    url:'@Url.Action("AddComment")',
                    dataType:'json',
                    data:{
                        PostId : $('#PostId').val(),
                        UserName : $('#UserName').val(),
                        Text : $('#Text').val(),
                        Url: $('#Url').val()
                    },
                    success: function(yorum){
                        console.log(yorum);
                        $("#comments").append(`
                            <div class="my-4 d-flex">
                                <img src="/img/${yorum.image}" class="avatar rounded-circle float-start me-3" />
                                <div>
                                    <div class="mb-2 d-flex">
                                        <h6 class="me-2">${yorum.userName}</h6>
                                        <small>${new Date(yorum.publishedOn).toLocaleString()}</small>
                                    </div>
                                    <p>${yorum.text}</p>
                                </div>
                            </div>
                            <hr class="my-4" />
                        `);

                       
                        $("#UserName").val('');
                        $("#Text").val('');

                        
                        var text = $("#commentCount").text(); 
                        var number = parseInt(text);
                        if (!isNaN(number)) {
                            $("#commentCount").text((number + 1) + " adet yorum");
                        }
                    }
                });
            });
        });
    </script>

}
