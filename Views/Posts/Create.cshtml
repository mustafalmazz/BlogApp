@model PostCreateViewModel   

<div class="row">
    <div class="col-12">
        <div class="bg-white p-4">
            <h1 class="text-center">Post Create Page</h1>
            <hr />
            <form action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Url" class="form-label"></label>
                    <input asp-for="Url" class="form-control" />
                    <span asp-validation-for="Url" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Content" class="form-label"></label>
                    <textarea asp-for="Content" class="form-control"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <button class="btn btn-primary" type="submit">Create</button>
            </form>
        </div>
        
    </div>
</div>

@section Scripts {
    <script src="https://cdn.tiny.cloud/1/c5u5x88k3lzpefkd8u4q92aovj6ck9gh0onm6yj7bjq271yt/tinymce/8/tinymce.min.js" referrerpolicy="origin"></script>
    <script>
        tinymce.init({
            selector: 'textarea#Content', // textarea ID'si
            menubar: false, // Menü çubuğunu gizler
            plugins: 'link image lists code',
            toolbar: 'undo redo | bold italic underline | bullist numlist | link image | code',
            height: 300,
            branding: false // "Powered by Tiny" yazısını kaldırır
        });
    </script>
}
