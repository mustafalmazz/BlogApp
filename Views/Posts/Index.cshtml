@model PostViewModel
@{
    ViewData["Title"] = "Blog Posts";
}

<style>
    .blog-container {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding: 60px 0;
    }

    .blog-header {
        text-align: center;
        margin-bottom: 50px;
        color: white;
    }

        .blog-header h1 {
            font-size: 3rem;
            font-weight: 800;
            margin-bottom: 10px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
        }

        .blog-header p {
            font-size: 1.2rem;
            opacity: 0.9;
        }

    .posts-section {
        background: white;
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.1);
        margin-bottom: 30px;
    }

    .section-title {
        font-size: 1.8rem;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 30px;
        position: relative;
        padding-bottom: 15px;
    }

        .section-title:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 60px;
            height: 4px;
            background: linear-gradient(90deg, #667eea, #764ba2);
            border-radius: 2px;
        }

    .post-card {
        background: #f8f9fa;
        border-radius: 15px;
        padding: 20px;
        margin-bottom: 25px;
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

        .post-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.2);
            border-color: #667eea;
        }

    .post-image {
        border-radius: 12px;
        overflow: hidden;
        height: 100%;
        min-height: 180px;
        object-fit: cover;
    }

    .post-content {
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .post-title {
        font-size: 1.4rem;
        font-weight: 700;
        margin-bottom: 15px;
        line-height: 1.4;
    }

        .post-title a {
            color: #2d3748;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .post-title a:hover {
                color: #667eea;
            }

    .post-description {
        color: #718096;
        font-size: 0.95rem;
        line-height: 1.6;
        margin-bottom: 15px;
    }

    .read-more {
        display: inline-flex;
        align-items: center;
        color: #667eea;
        font-weight: 600;
        font-size: 0.9rem;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .read-more:hover {
            color: #764ba2;
            transform: translateX(5px);
        }

        .read-more:after {
            content: '→';
            margin-left: 8px;
            font-size: 1.2rem;
        }

    .post-divider {
        border: none;
        height: 2px;
        background: linear-gradient(90deg, transparent, #e2e8f0, transparent);
        margin: 25px 0;
    }

    .sidebar {
        position: sticky;
        top: 20px;
    }

    .sidebar-widget {
        background: white;
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.1);
        margin-bottom: 30px;
    }

    .pagination {
        justify-content: center;
        margin-top: 40px;
    }

        .pagination .page-item .page-link {
            border: none;
            background: #f8f9fa;
            color: #667eea;
            font-weight: 600;
            margin: 0 5px;
            border-radius: 10px;
            padding: 10px 18px;
            transition: all 0.3s ease;
        }

            .pagination .page-item .page-link:hover {
                background: linear-gradient(135deg, #667eea, #764ba2);
                color: white;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
            }

        .pagination .page-item.active .page-link {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
        }

    @@media (max-width: 768px) {
        .blog-header h1 {
            font-size: 2rem;
        }

        .posts-section {
            padding: 25px;
        }

        .post-card {
            padding: 15px;
        }

        .post-image {
            min-height: 120px;
            margin-bottom: 15px;
        }
    }
</style>

<div class="blog-container">
    <div class="container">
        <div class="blog-header">
            <h1>✨En güncel ve ilgi çekici gönderileri keşfedin</h1>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <div class="posts-section">
                    <h2 class="section-title">Popüler Kurslar</h2>

                    @foreach (var item in Model.Posts)
                    {
                        <div class="post-card">
                            <div class="row g-0">
                                <div class="col-md-4">
                                    <img src="~/img/@item.Image" class="post-image img-fluid" alt="@item.Title" />
                                </div>
                                <div class="col-md-8">
                                    <div class="post-content ps-md-4">
                                        <h3 class="post-title">
                                            <a href="/posts/details/@item.Url">@item.Title</a>
                                        </h3>
                                        <p class="post-description">@item.Description</p>
                                        <a href="/posts/details/@item.Url" class="read-more">Devamını Oku</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        @if (item != Model.Posts.Last())
                        {
                            <hr class="post-divider" />
                        }
                    }

                    <nav>
                        <ul class="pagination">
                            <li class="page-item active"><a href="#" class="page-link">1</a></li>
                            <li class="page-item"><a href="#" class="page-link">2</a></li>
                            <li class="page-item"><a href="#" class="page-link">3</a></li>
                        </ul>
                    </nav>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="sidebar">
                    <div class="sidebar-widget">
                        @await Component.InvokeAsync("TagsMenu")
                    </div>
                    <div class="sidebar-widget">
                        @await Component.InvokeAsync("NewPosts")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>